# Production Environment Configuration

# Database
DATABASE_URL=postgresql://ig_user:your_secure_password@localhost:5432/instagram_automation

# API Keys (REPLACE WITH YOUR REAL KEYS)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
APIFY_TOKEN=apify_api_...

# Session Encryption
SESSION_ENCRYPTION_KEY=generate-32-byte-hex-key-here

# Cloud Settings
NODE_ENV=production
PORT=3333
HEALTH_CHECK_PORT=3000

# Pipeline Intervals (milliseconds)
DISCOVERY_INTERVAL=14400000      # 4 hours
REPLY_CHECK_INTERVAL=1800000     # 30 minutes  
HANDOFF_INTERVAL=7200000         # 2 hours

# Pipeline Limits
MAX_DMS_PER_CYCLE=100
SEEDS_PER_CYCLE=5
CRAWL_DEPTH=2
MIN_OF_SCORE=6

# DM Settings
DM_TEMPO=fast

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=info

# Optional: Webhook for handoff notifications
# HANDOFF_WEBHOOK_URL=https://your-webhook.com/handoff

# Optional: Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...