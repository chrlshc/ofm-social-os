# Configuration Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Configuration Flask (OBLIGATOIRE EN PRODUCTION)
FLASK_SECRET_KEY=your-super-secure-flask-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-different-from-flask-key
FLASK_ENV=production

# Base de données (PostgreSQL recommandé en production)
DATABASE_URL=postgresql://username:password@localhost:5432/payments_db

# Configuration serveur
PORT=5000
HOST=0.0.0.0

# URLs pour les redirections (Stripe Connect)
FRONTEND_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com
ONBOARDING_REFRESH_URL=https://your-domain.com/onboarding/refresh
ONBOARDING_RETURN_URL=https://your-domain.com/onboarding/complete

# Rate limiting (Redis recommandé en production)
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/payment_service.log

# Sécurité supplémentaire
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com