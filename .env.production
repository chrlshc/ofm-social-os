# Global Production Environment Variables

# Database
POSTGRES_USER=ofm_prod
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=ofm_production
DATABASE_URL=postgresql://ofm_prod:your_secure_postgres_password_here@postgres:5432/ofm_production?sslmode=require

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# Domain
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
ADMIN_DOMAIN=admin.yourdomain.com

# SSL
SSL_EMAIL=admin@yourdomain.com

# Backup
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=ofm-backups-production

# Monitoring
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
PROMETHEUS_RETENTION=30d

# Node Environment
NODE_ENV=production